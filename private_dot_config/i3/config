set_from_resource $dark_purple   color5   #b16286
set_from_resource $dark_aqua     color6   #689d6a
set_from_resource $red           color9   #fb4934
set_from_resource $green         color10  #b8bb26
set_from_resource $yellow        color11  #fabd2f
set_from_resource $blue          color12  #83a598
set_from_resource $purple        color13  #d3869b
set_from_resource $aqua          color14  #8ec07c

set_from_resource $darker        dark0_hard #1d2021
set_from_resource $dark          color0   #282828
set_from_resource $grey          color8   #928374
set_from_resource $light         color7   #a89984
set_from_resource $lighter       light3  #bdae93
set_from_resource $lightest      color15  #ebdbb2
set_from_resource $white         light0   #fbf1c7

# class                 border backgr. text indicator child_border
client.focused          $lighter $lighter $dark $lighter $lighter
client.focused_inactive $darker $darker $light $darker $darker
client.unfocused        $darker $darker $light $darker $darker
client.urgent           $red $red $lighter $red $red
client.background       $darker

hide_edge_borders smart 
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
          colors {
            background $dark
            statusline $light
            separator $light

            focused_workspace $green $green $dark
            urgent_workspace $red $red $white
          }
          status_command i3status
}

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork


exec --no-startup-id picom -b

exec --no-startup-id nm-applet
exec --no-startup-id blueman-applet

# Remap Caps Lock to CTRL
exec --no-startup-id /usr/bin/setxkbmap -option "ctrl:nocaps"

