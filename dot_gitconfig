[advice]
  mergeConflict = false
[alias]
	fixup = commit --fixup
	last = log -1 HEAD --ext-diff
	today = log --since 00:00:00 --all --no-merges --oneline --author nilueps@gmail.com --ext-diff
	co = checkout
	sho = show --ext-diff
  unstage-commit = !git reset HEAD^ && git commit --reuse-message=ORIG_HEAD --allow-empty --no-verify

[branch]
	sort = -committerdate
[commit]
	verbose = true
[core]
	excludesFile = ~/.gitignore
	pager = delta
[delta]
	navigate = true
[interactive]
	diffFilter = delta --color-only
[diff]
	; external = difft
	algorithm = histogram
	colorMoved = default
[mergetool]
  keepBackup = false
[mergetool "meld"]
	cmd = flatpak run org.gnome.meld -- "$LOCAL" "$MERGED" "$REMOTE"
[fetch]
	prune = true
[help]
	autoCorrect = prompt
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
	guitool = meld
	conflictStyle = diff3
[push]
	autoSetupRemote = true
[rebase]
	autoSquash = true
	updateRefs = true
[rerere]
	enabled = true
	autoUpdate = true
[transfer]
	fsckObjects = true
[user]
	email = nilueps@gmail.com
	name = Nicolas Epstein
[url "git@github.com:"]
	insteadOf = "https://github.com/"
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
