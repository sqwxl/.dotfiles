# Colors
# gruvbox
set $dark_red       #cc241d
set $dark_green     #98971a
set $dark_yellow    #d79921
set $dark_blue      #458588
set $dark_purple    #b16286
set $dark_aqua      #689d6a
set $red            #fb4934
set $green          #b8bb26
set $yellow         #fabd2f
set $blue           #83a598
set $purple         #d3869b
set $aqua           #8ec07c

set $darker         #1d2021
set $dark           #282828
set $grey           #928374
set $light          #a89984
set $lighter        #bdae93
set $lightest       #ebdbb2
set $white          #fbf1c7

set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty

# set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $menu wofi --gtk-dark --insensitive --show run | xargs swaymsg exec --

# output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output * background $dark solid_color

input "type:keyboard" {
  xkb_options ctrl:nocaps
}

input "1739:0:Synaptics_TM3075-002" {
  tap enable
  dwt enable
  natural_scroll enable
  accel_profile adaptive
}

input "1133:16468:Logitech_Wireless_Mouse" {
  natural_scroll enabled
}

# class                 border backgr. text indicator child_border
client.focused          $dark_green $dark_green $dark $green $dark_green
client.focused_inactive $dark $dark $light $dark $dark
client.unfocused        $dark $dark $light $dark $dark
client.urgent           $red $red $lighter $red $red
client.background       $darker

titlebar_border_thickness 1
titlebar_padding 2 1
default_border pixel 1
hide_edge_borders --i3 smart_no_gaps

# Status Bar:
bar {
    # swaybar_command waybar

    position top
    height 20

    status_command while echo "$(date +'%A %F %R') $(expr $(($(cat /sys/class/power_supply/BAT0/capacity) + $(cat /sys/class/power_supply/BAT1/capacity))) / 2)"; do sleep 1; done
    colors {
        background $dark
        statusline $light
        separator $light

        focused_workspace $dark_green $dark_green $dark
        urgent_workspace $red $red $white
        inactive_workspace $dark $dark $light
    }
}

exec gammastep

include /etc/sway/config.d/*
include ./conf.d/*
