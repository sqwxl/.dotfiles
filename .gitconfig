[user]
	email = nilueps@gmail.com
	name = Nicolas Epstein
[pull]
	rebase = false
[push]
	autoSetupRemote = true
[init]
	defaultBranch = main
[merge]
	tool = nvimdiff
[diff]
	external = difft
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
	sw = switch
	rbi = rebase -i
	hardhead = reset --hard HEAD
	lo = log --oneline
	co = checkout
	last = log -1 HEAD
	rbc = rebase --continue
	cpc = cherry-pick --continue
	rba = rebase --abort
	mt = mergetool
	cf = clean --force
	d = diff
	ds = diff --staged
	goa = log --graph --oneline --all
	br = branch
[rerere]
	autoUpdate = true
